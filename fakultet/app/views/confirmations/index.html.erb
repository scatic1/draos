<h1><center>P O T V R D E</center></h1>

<table>
  <thead>
    <tr>
      <th>Svrha</th> 
      <th>Ime</th> 
      <th>Prezime</th> 
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @confirmations.to_a.each do |confirmation| %>
      <% if confirmation.ime == current_user.name %>
        <tr>
          <td><%= confirmation.svrha %></td> 
          <td><%=current_user.name %></td> 
          <td><%= current_user.surname %></td> 
          <td><%= link_to 'Show', confirmation %></td> 
          <td><%= link_to 'Edit', edit_confirmation_path(confirmation) %></td> 
          <td><%= link_to 'Destroy', confirmation, method: :delete, data: { confirm: 'Are you sure?' } %></td> 
          
        </tr>
      <% end %>
    <% end %>
  </tbody>
</table>
