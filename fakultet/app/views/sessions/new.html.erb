  
   
<%=form_tag login_path do%>
<div class="row">
	<div class="col-md-3">
		
	</div>
	<div class="col-md-4">
                 <div class="form-group">
                 	<%= label_tag :username%>
				    <%= text_field_tag :username, nil ,class:"form-control " %>
		
			     </div>
			     <div class="form-group">
				<%= label_tag :password ,"Password",:class => "exampleInputPassword1" %>
				<%= password_field_tag :password, nil ,:id => "exampleInputPassword1",class:"form-control " %>
				 </div>
			 <div class="form-group">
			<%= submit_tag 'Log in',class:"btn btn-dark"%>
		</div>
		</div>
		<div class="col-md-5">
			<img  style="width: 50%" class="img-fluid mx-auto" src="assets/graduate.png"></img>
		</div>
	</div>
<%end  %>

