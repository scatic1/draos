 <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/4.7.0/css/font-awesome.min.css">
  <div class="row">
    <div class="col-md-4">
      <div class="row">
      <form class="form-inline col-md-8 sm-12 my-2 my-lg-0">
<%= form_tag professors_path, :method => 'get' do %>
 <%= text_field_tag :search, params[:search], placeholder: "Enter name...",:class=>"form-control mr-sm-2"%>
 <button class="btn btn-outline-secondary my-2 my-sm-0 " type="submit">
 <i class="fa fa-search" aria-hidden="true"></i> Search</button>

<% end %>


</form>
<div class="col-md-4 sm-12">
<% if current_user.present? && current_user.category ==  'admin' %>
<%= button_to "+Add",  newprofessor_path, :method => :get , :class=>'btn btn-block btn-info ml-2' %>
<%end%>
</div>
</div>
       <div class="bg-faded p-4 my-4">
        <hr class="divider">
        <h2 class="text-center text-lg text-uppercase my-0">
          <strong>Automatic Control and Electronics</strong>
        </h2>
        <hr class="divider">
         <h2 class="text-center text-lg text-uppercase my-0">
          <strong>Telecommunication</strong>
        </h2>
           <hr class="divider">
             <h2 class="text-center text-lg text-uppercase my-0">
          <strong>Electronic Power Engineering</strong>
        </h2>
        <hr class="divider">
        <h2 class="text-center text-lg text-uppercase my-0">
          <strong>Computer Science and Informatics</strong>
        </h2>
        <hr class="divider">
       
      
      </div>
    </div>
    
       <div class="col-md-8 card-deck">
       <% @professors.each do |professor| %>
      <div class="col-md-4 p-2">
      <div class="card p-2 bg-light" >
      
  <%= image_tag(professor.image, :class=>'card-img-top ')  %>

  <div class="card-body">
  
    <a style="color: black" class="card-text text-center text-lg"<%= link_to "#{professor.name} #{professor.surname}", professor%></a><br>
<% if current_user.present? && current_user.category ==  'admin' %>
<div class="btn-toolbar">
 <%= button_to "Edit",  editprofessor_path(professor.id), :method => :get , :class=>'btn btn-success mr-1' %>
 <%= button_to "Delete", professor, method: :delete, :class=>'btn btn-danger' %> 
</div>
 <%end%>
  </div>
</div>
</div>
    <% end %>
    </div>
    
   
  </div>

  
